{% extends 'layout.html.twig' %}
{% block content %}
<div class="background-cars min-vh-100" style="background-size: cover;
background-position: center;
background-repeat: no-repeat; background-image: url('https://file1.autoplus.fr/var/autoplus/storage/images/3/2/1/321396/marche-auto-top-des-ventes-1er-trimestre-2020.jpg?alias=original')">
    <div class="container pad-top row mx-auto d-flex justify-content-center">
        <div class="form-box rounded w-100 mt-5 p-3 px-5 py-5 col-12 col-sm-12 col-md-11 col-lg-8"
             style="background-color: rgba(0,0,0,0.5)">
            <div class="d-flex mt-4" style="justify-content: center">
                <img src="/assets/images/logo_cpa_on_board.png">
            </div>
            <form action='/auth/check' method="post">
                <div class="form-group">
                    <label class="text-white" for="login">Votre identifiant :</label>
                    <input type="email" name="login" class="form-control" id="login"
                           placeholder="Entrez votre identifiant" value="">
                    <div class="text-danger mt-1">{{ detailsError }}</div>
                    <div class="text-danger mt-1">{{ errors.password }}</div>
                </div>
                <div class="form-group">
                    <label class="text-white" for="password">Votre mot de passe</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword1"
                           placeholder="Entrez votre mot de passe">
                    <div class="text-danger mt-1">{{ errors.password }}</div>
                </div>
                <div class="d-flex mt-4" style="justify-content: end">
                    <button type="submit" class="btn btn-outline-light">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}